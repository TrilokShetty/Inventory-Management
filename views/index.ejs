<%- include('partials/header') %>

<main>
    <h2>Inventory Items</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= item.price.toFixed(2) %></td>
                    <td>
                        <a href="/edit/<%= item._id %>">Edit</a>
                        <a href="/delete/<%= item._id %>" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</main>

<%- include('partials/footer') %>
